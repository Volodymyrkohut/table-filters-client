{
  "compilerOptions": {
    "target": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "declarationDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "./src/stories", ".eslintrc.js"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
